<div class='wrapper'>
	<div class='conferencepage'>
		<div class='top'>
			<label class='title'><%= conference.Title %></label>
			<% if (isOwner) { %>
				<a href='/conferences/<%= conference.id %>/edit' class='edit button'>Edit</a>
			<% } %>
		</div>
		<div class='center'>
			<p><%= conference.Description %></p>
			<div class='dates'>
				<label>Dates:</label>
				<div class='group'>
					<label>From: <%= moment(JSON.parse(conference.Dates)[0]).format('dddd MMMM DD') %></label><br>
					<label>To: <%= moment(JSON.parse(conference.Dates)[1]).format('dddd MMMM DD') %></label>
				</div>
			</div>
		</div>
		<div class='bottom'>
			<div class='group' style='box-shadow: 0 4px 4px rgba(0, 0, 0, 0.15);margin-bottom:10px;'>
				<label class='title'>Committees</label>
				<% if (isOwner) { %>
					<a href='/conferences/<%= conference.id %>/addcommittee' class='add button'>Add a Committee</a>
				<% } %>
			</div>
			<div class='group'>
				<% if (committees.length > 0) { %>
					<% for (var i = 0; i < committees.length; i++) { %>
						<div class='committee'>
							<div>
								<label class='name'><%= committees[i].name %></label>
								<% if (isOwner) { %>
									<a class='add button' href='/committees/<%= committees[i].id %> /edit'>Edit</a>
								<% } %>
							</div>
							<div class='section dropdown'>
								<label class='title'>Countries</label>
								<span class='toggle-countries toggle'></span>
								<div class='content countries'>
									<% if (committees[i].countries.length > 0) { %>
										<% for (var x = 0; x < committees[i].countries.length; x++) { %>
											<div class='country'>
												<div class='group'>
													<span class='name'><%= committees[i].countries[x] %></span>
												</div>
											</div>
										<% } %>
									<% } %>
								</div>
							</div>
							<div class='section dropdown'>
								<label class='title'>Chair Info</label>
								<span class='toggle-countries toggle'></span>
								<div class='content countries'>
									<label class='name'><%= committees[i].chair[0] %></label>
									<label class='email'><%= committees[i].chair[1] %></label>
								</div>
							</div>
							
							<%= committees[i].dais[0] %>
						</div>
					<% } %>
				<% } %>
			</div>
			<div class='group' style='box-shadow: 0 4px 4px rgba(0, 0, 0, 0.15);margin-bottom:10px;'>
				<label class='title'>Delegations</label>
				<% if (isOwner) { %>
					<a href='/conferences/<%= conference.id %>/adddelegation' class='add button'>Add a Delegation</a>
				<% } %>
			</div>
			<div class='group'>
				<% if (delegations.length > 0) { %>
					<% for (var i = 0; i < delegations.length; i++) { %>
						<div class='delegation'>
							<div>
								<label class='name'><%= delegations[i].name %></label>
								<% if (isOwner) { %>
									<a class='add button' href='/delegations/<%= delegations[i].id %>'>Edit</a>
								<% } %>
							</div>
							<div class='section dropdown'>
								<div>
									<label class='title'>Students</label>
									<span class='toggle-students toggle'></span>
								</div>
								<div class='content students'>
									<% if (delegations[i].students.length > 0) { %>
										<% for (var x = 0; x < delegations[i].students.length; x++) { %>
											<div class='student'>
												<div class='group'>
													<span class='name'><%= delegations[i].students[x].name %></span>
													<span class='email'><%= delegations[i].students[x].email %></span>
												</div>
											</div>
										<% } %>
									<% } %>
								</div>
							</div>
							<div class='section dropdown'>
								<div>
									<label class='title'>Teachers</label>
									<span class='toggle-teachers toggle <%= i %>'></span>
								</div>
								<div class='content teachers <%= i %>'>
									<% if (delegations[i].teachers.length > 0) { %>
										<% for (var x = 0; x < delegations[i].teachers.length; x++ ) { %>
											<div class='teacher'>
												<div class='group'>
													<span class='name'><%= delegations[i].teachers[x].teachername %></span>
													<span class='email'><%= delegations[i].teachers[x].teacheremail %></span>
												</div>
											</div>
										<% } %>
									<% } %>
								</div>
							</div>
						</div>
					<% } %>
				<% } %>
			</div>
			<div class='group'>
				<label class='title'>Your Debates</label>
				<% if (isOwner) { %>
					<a href='/conferences/<%= conference.id %>/adddebate' class='add button'>Add a Debate</a>
				<% } %>
			</div>
		</div>
	</div>
</div>